{
  "name": "backend-fundamentals",
  "version": "1.0.0",
  "description": "API com Node.js, Express e TypeScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/server.ts",
    "dev:cluster": "node --loader ts-node/esm src/server.cluster.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:cluster": "node dist/server.cluster.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop backend-fundamentals",
    "pm2:restart": "pm2 restart backend-fundamentals",
    "pm2:logs": "pm2 logs backend-fundamentals",
    "pm2:monit": "pm2 monit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "backend",
    "cluster",
    "pm2"
  ],
  "author": "Rafael Maio",
  "license": "ISC",
  "dependencies": {
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
